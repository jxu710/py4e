count = 0
sum = 0


while True:
    user_input = input("Enter an number")
    if user_input == "done":
        print("count:", count)
        print("sum:", sum)
        print("average :", sum / count)
        break

    try:
        count = count + 1
        inputNumber = int(user_input)
        sum = sum + inputNumber
    except:
        print("Invalid Input")
        break
