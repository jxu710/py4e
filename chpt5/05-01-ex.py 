count = 0
sum = 0


while True:
    user_input = input("Enter an number")
    if user_input == "done":
        break

    try:
        inputNumber = int(user_input)
        sum = sum + inputNumber
        count = count + 1
    except:
        print("Invalid Input")
        continue
average = sum / count
print(count, sum, average)


#  Instructor's Answer

num = 0
tot = 0.0

while True:
    sval = input("Enter a number:")
    if sval == "done":
        break

    try:
        fval = float(sval)
    except:
        print("Invalid Input")
        continue

    num = num + 1
    tot = tot + fval

print("All Done")
print(tot, num, tot / num)
